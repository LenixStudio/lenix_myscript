{
  "scripts": {
    "nui": "pnpm create vite client/nui --template react-swc-ts",
    "dev": "pnpm dev:client & pnpm dev:server & pnpm dev:nui",
    "build": "pnpm build:client && pnpm build:server && pnpm build:nui",
    "dev:client": "esbuild client/index.ts --bundle --outfile=dist/client.js --watch=forever",
    "build:client": "esbuild client/index.ts --bundle --outfile=dist/client.js --minify",
    "dev:server": "esbuild server/index.ts --bundle --platform=node --outfile=dist/server.js --watch",
    "build:server": "esbuild server/index.ts --bundle --platform=node --outfile=dist/server.js --minify",
    "dev:nui": "cd client/nui && pnpm dev",
    "build:nui": "cd client/nui && pnpm build"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0",
    "esbuild": "^0.19.0",
    "@citizenfx/client": "latest",
    "@citizenfx/server": "latest"
  }
}